#!/usr/bin/env bash

disconnected="/"
disconnected2="\\"
wireless_connected=""
ethernet_connected=""

while true; do
    if ping -c1 8.8.8.8 &>/dev/null; then
        ID=$(ip link | awk '/state UP/ {print $2}')
        if [[ $ID == e* ]]; then
            echo "$ethernet_connected" ; sleep 10
        else
            echo "$wireless_connected" ; sleep 10
        fi
    else
        echo "$disconnected" ; sleep 0.6
        echo "$disconnected2" ; sleep 0.6
    fi
done
