#!/usr/bin/env bash

. "${HOME}/.cache/wal/colors.sh"

red=$color1
blk=$color0
grn=$color2
grey=$color8
mag=$color5
blue=$color6
ylw=$color3
dblu=$color4
fg=$foreground
bg=$background
win=$(echo -e "\ue1d8")
med=$(echo -e "\ue1fe")
chg=$(echo -e "\ue200")
low=$(echo -e "\ue1fd")
bat=$(echo -e "\ue1ff")
full=$(echo -e "\ue201")
wifi=$(echo -e "\ue048")
music=$(echo -e "\ue1a6")
clr="%{B-}"
SEP="  "
GAP=" "
SEC="%{B$blk}"
SPC="%{B$blk}"$GAP"%{B-}"

content() {

    window_title() {
        color="%{B$red}"
        mclr="%{B$dblu}"
        micon="%{F$blk}$music%{F-}"
        icon="%{F$blk}$win%{F-}"
        title=$SEC$(xtitle -t 64)
        track=$SEC$(/home/daniel/bin/progbar)
        mpc_status=$(mpc status | awk -F "[][]" 'NR==2{print $2}')

        if [[ "$mpc_status" == "playing"  ]]
        then
            echo "$mclr$SEP$micon$SEP$clr$SPC$SPC$track$SPC$SPC$clr"
        else
            echo "$color$SEP$icon$SEP$clr$SPC$SPC$title$SPC$SPC$clr"
        fi
}



clock() {
    time=$(date '+%l:%M')
    echo "$time"
}

battery() {
    chrg="%{B$blue}"
    good="%{B$grn}"
    warn="%{B$ylw}"
    bad="%{B$red}"
    icon="%{F$blk}$bat%{F-}"
    iconf="%{F$blk}$full%{F-}"
    iconc="%{F$blk}$chg%{F-}"
    iconm="%{F$blk}$med%{F-}"
    iconl="%{F$blk}$low%{F-}"
    power=$(acpi |awk '{ print$4 }' | sed 's/%,//g;s/%//g')
    status=$(cat /sys/class/power_supply/BAT0/status)
    
    if [[ $status == "Full" ]]; then
        echo "$chrg$SEP$iconf$SEP$clr$SPC$SEC $power $SPC$clr"
    elif [[ $status == "Charging" ]]; then
        echo "$chrg$SEP$iconc$SEP$clr$SPC$SEC $power $SPC$clr"
    elif [[ "$power" -gt " 50 " ]]; then
        echo "$good$SEP$icon$SEP$clr$SPC$SEC $power $SPC$clr"
    elif [[ "$power" -gt " 20 " ]]; then
        echo "$warn$SEP$iconm$SEP$clr$SPC$SEC $power $SPC$clr"
    else 
        echo "$bad$SEP$iconl$SEP$clr$SPC$SEC $power $SPC$clr"
    fi
}

network() {
    color="%{B$mag}"
    icon="%{F$blk}$wifi%{F-}"
    SSID=$SEC$(iwgetid -r)
    echo "$color$SEP$icon$SEP$clr$SPC$SSID$SPC$clr"
}

    left="$(window_title)"
    center="$(clock)"
    right="$(battery)$(network)"

    output="$left%{c}$center%{r}$right"
    echo -n "$output "
}

{
while :; do
    echo $(content)
    sleep 1
done
} 2> /dev/null | lemonbar -d -f "-ctrld-fixed-medium-r-normal-*-13-80-96-96-c-80-iso10646-1" -f "-wuncon-siji-medium-r-normal--10-100-75-75-c-80-iso10646-1" -F $fg -B $bg -g 1366x18
